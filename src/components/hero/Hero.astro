---
import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Jose Luis Garcia Andreu</h1>
			<p class="hero__text">
				Desarrollador de software especializado en tecnologías web como Angular, Astro, Spring Boot y Outsystems.
			</p>
			<Boton href="#about" texto="Quiero saber más"/>
		</div>
    <img
		class="hero__img"
		src="/img/jhon-doe.webp"
		alt="Jhon Doe"
		width="384"
    	height="384"
	/>
	</div>
</section>
